  scope_modifier: |-
    (?ix: local | static | global )
  flow_keywords: |-
    (?ix: break | case | catch | continue | else | finally | for | goto
    | if | loop | return | switch | throw | try | until | while )
  context_keywords: |-
    (?ix:
    | isset | not | or | super | true | unset
    | and | as | contains | false | in | is )
  keywords: |-
    (?x: {{context_keywords}} | {{flow_keywords}} | {{scope_modifier}} )
  directive_eats_string:  |-
    (?ix: dllload | errorstdout | hotstring | include | includeagain
    | notrayicon | requires | singleinstance | warn )
  directive_eats_expression: |-
    (?ix: clipboardtimeout | hotif | hotiftimeout | inputlevel| maxthreads
    | maxthreadsbuffer | maxthreadsperhotkey | suspendexempt | usehook
    | winactivateforce )

  identifier: (?:[[:alpha:]_][[:alnum:]_]*)
  identifier_CAPS: (?:(?:[A-Z][0-9A-Z_]*)|(?:_[0-9A-Z]+))

  linestart: '(?=^)'

  illegal_path_chars: (?:\|\/|\:|\*|\?|\"|\<|\>|\|)
  escape_char: (?:`|\;|\:|\{|n|r|b|t|s|v|a|f|"|')
  legal_include_path: (?:(?i:\s*\w:\\)?(?:(%)({{known_variables}})(%)|[^{{illegal_path_chars}}](?!`{{escape_char}}))+)

  hotkey_modifier: (?i:[<>$~*!+#^])
  hotkey_identifier: (?i:`;|[\x21-\x39\x3C-\x7E]|[a-z]\w+|[^\x00-\x7f])
  hotkey_definition: (?i:((({{hotkey_modifier}}*)?({{hotkey_identifier}}))|({{hotkey_identifier}})\s+(&)\s+~?({{hotkey_identifier}}))(\s+up)?)(::)\s*(['"]|`{)?



####################################[ MAIN ]####################################

scope: source.ahk2
contexts:
  main:
    - meta_include_prototype: false
    - match: ''
      push: script

  prototype:
    - include: comments
    - include: literals
    - match: '^\s*\b{{known_functions}}\b(?!\()'
      scope: support.function.ahk2

  script:
    - include: top-level
    - include: expression

  top-level:
    # - include: block
    # - include: group
    # - include: brackets
    - include: hotkey           # need
    - include: directives
    - include: hotstring        # neeeed

  storage-modifier:
    - match: \b(?i:global|static|local)\b
      scope: storage.modifier.ahk2


#################################[ EXPRESSION ]#################################

  expression:
    # - include: literals
    - include: generic-block
    - include: generic-group
    - include: generic-brackets
    - include: fat-arrows         # need
    - include: control-keywords   # look at
    - include: property           # look at
    - include: storage-modifier
    - include: function
    - include: builtin-variables
    - include: operators
    # - include: variables-without-CAPS-constants
    # - include: variables-with-CAPS-constants
    - include: variables-CAPS
    - include: variables

  builtin-variables:
    - match: \b{{known_variables}}\b
      scope: support.constant.ahk2

  generic-block:
    - match: \{
      scope: punctuation.section.block.begin.ahk2
      push:
        - meta_scope: meta.block.ahk2
        - match: \}
          scope: punctuation.section.block.end.ahk2
          pop: 1
        - include: expression
    - include: stray-brace

  generic-group:
    - match: \(
      scope: punctuation.section.group.begin.ahk2
      push:
        - meta_scope: meta.group.ahk2
        - match: \)
          scope: punctuation.section.group.end.ahk2
          pop: 1
        - include: expression
    - include: stray-group

  generic-brackets:
    - match: \[
      scope: punctuation.section.brackets.begin.ahk2
      push:
        - meta_scope: meta.brackets.ahk2
        - match: \]
          scope: punctuation.section.brackets.end.ahk2
          pop: 1
        - include: expression
    - include: stray-bracket

################################[ ASSIGNMENTS ]#################################

  variables:
    - match: '\b{{identifier}}\b(?=\.)'
      scope: entity.name.class.ahk2
      push:
        - include: variables
        - match: ''
          pop: 1
    - match: '(\.)({{identifier}}\b)(?=\()'
      captures:
        1: punctuation.accessor.dot.ahk2
        2: entity.name.function.method.ahk2
      push: function-arguments
    - match: '(\.)({{identifier}}\b)'
      captures:
        1: punctuation.accessor.dot.ahk2
        # 2: variable.other.member.ahk2
        # 2: variable.language.ahk2
        2: storage.type.trait.ahk2
    - match: '(?=(?<!\.)\b{{identifier}}\b)'
      push:
        - meta_scope: variable.ahk2
        - match: (?<!\.)\b{{identifier}}\b
          scope: variable.user.generic.ahk2
          pop: 1
        - include: pop-out

  variables-CAPS:
    - match: '(?=(?<!\.)\b{{identifier_CAPS}}\b)'
      push:
        - meta_scope: variable.user.ahk2
        - match: (?<!\.)\b{{identifier_CAPS}}\b
          scope: entity.name.tag.user.constant.ahk2
          pop: 1
        - include: pop-out

