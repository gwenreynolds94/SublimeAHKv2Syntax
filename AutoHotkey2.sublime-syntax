  operators:
    - match: ':=|\.=|::|=>|\+=|-=|/=|//=|\|=|\^=|>>=|<<=|\*=|&='
      scope: keyword.operator.assignment.ahk2
    - match: '<\=|>\=|\=\=|<|>|\!\=|\?|:|~\=|!|!\=\=|\='
      scope: keyword.operator.comparison.ahk2
    - match: \+|\-|\*|\*\*|/|//|%|<<|>>|>>>|&|\||\^|~
      scope: keyword.operator.arithmetic.ahk2
    - match: '\b(?i:and|or|not|is|contains)\b'
      scope: keyword.operator.logical.ahk2


################################[ LINE OF CODE ]################################

  control-keywords:
    - match: \b(?i:if)\b
      scope: keyword.control.conditional.if.ahk2
      push:
        - match: (?=.*\{\s*$)
          push: if-block
        - include: else-pop
    - match: \b(?i:else)\b
      scope: keyword.control.conditional.else.ahk2
    - match: \b(?i:for)\b
      scope: keyword.control.loop.for.ahk2
    - match: \b(?i:in)\b
      scope: keyword.control.loop.in.ahk2
    - match: \b(?i:while)\b
      scope: keyword.control.loop.while.ahk2
    - match: \b(?i:loop)\b
      scope: keyword.control.loop.repeat-until.loop.ahk2
    - match: \b(?i:until)\b
      scope: keyword.control.loop.repeat-until.until.ahk2
    - match: \b(?i:break)\b
      scope: keyword.control.flow.break.ahk2
    - match: \b(?i:continue)\b
      scope: keyword.control.flow.continue.ahk2
    - match: \b(?i:try)\b
      scope: keyword.control.exception.try.ahk2
    - match: \b(?i:catch)\b
      scope: keyword.control.exception.catch.ahk2
    - match: \b(?i:finally)\b
      scope: keyword.control.exception.finally.ahk2
    - match: \b(?i:switch)\b
      scope: keyword.control.conditional.switch.ahk2
    - match: \b(?i:case)\b
      scope: keyword.control.conditional.case.ahk2
    - match: \b(?i:default)\b
      scope: keyword.control.conditional.default.ahk2
    - match: \b(?i:goto)\b
      scope: keyword.control.flow.goto.ahk2
    - match: \b(?i:throw)\b
      scope: keyword.control.flow.throw.ahk2
    - match: \b(?i:return)\b
      scope: keyword.control.flow.return.ahk2
    - match: \b(?i:as|unset|isset)\b
      scope: keyword.control
    - match: \b((?i:class))\s*({{identifier}})\s*((?i:extends)?)
      captures:
        1: storage.type.class.ahk2
        2: entity.name.type.class.ahk2
        3: storage.type.class.ahk2
      push: class-block


  if-block:
    - match: (?=\s*\{\s*$)
      push:
        - match: '\s*\{\s*$'
          scope: punctuation.section.braces.begin
          push:
          - meta_scope: meta.if.block.ahk2
          - match: \}
            scope: punctuation.section.braces.end.ahk2
            pop: 3
          - include: expression
    - include: stray-brace

#############################[ CLASS DECLARATION ]##############################

  class-block:
    - match: \{
      scope: punctuation.section.braces.begin
      push:
        - meta_scope: meta.class.body.ahk2
        - match: \}
          scope: punctuation.section.braces.end.ahk2
          pop: 2
        - include: script
    - include: stray-brace


##################################[ FUNCTION ]##################################

  function:
    - match: '\b({{known_functions}}|super)(?=\()'
      scope: support.function.ahk2
      push: function-arguments
    - match: '\b{{identifier}}(?=\()'
      scope: entity.name.function.ahk2
      push:
        - function-block
        - function-arguments

  function-arguments:
    - match: \(
      scope: punctuation.section.group.begin
      push:
        - meta_scope: meta.parameters.ahk2
        - match: \)
          scope: punctuation.section.group.end.ahk2
          pop: 2
        - include: expression
    - include: stray-group

  function-block:
    - match: (?!.*\{)
      pop: 1
    - match: \{
      scope: punctuation.section.braces.begin
      push:
        - meta_scope: meta.function.body.ahk2
        - match: \}
          scope: punctuation.section.braces.end.ahk2
          pop: 2
        - include: expression
    - include: stray-brace


##################################[ PROPERTY ]##################################

  property:
    - match: \b{{identifier}}(?=\[)
      scope: support.constant.ahk2
      push:
        - property-block
        - property-arguments
    - match: '(?=\b{{identifier}}\s*(?=\{))'
      push:
        - match: \b(?i:get)\b
          scope: keyword.declaration.getter.ahk2
          push: getter-block
        - match: \b(?i:set)\b
          scope: keyword.declaration.setter.ahk2
          push: setter-block
        - match: \b{{identifier}}\b
          scope: entity.other.attribute-name.ahk2
          push: property-block
        - match: ''
          pop: 1
    - match: (?=\b{{identifier}}\s*\=\>)
      push:
        - match: \b(?i:get|set)\b
          scope: keyword.declaration.ahk2
        - match: \b{{identifier}}\b
          scope: entity.other.attribute-name.ahk2
        - match: ''
          pop: 1

  getter-block:
    - match: \{
      scope: punctuation.section.braces.begin.ahk2
      push:
        - meta_scope: meta.getter.block.ahk2
        - match: \}
          scope: punctuation.section.braces.end.ahk2
          pop: 2
        - include: expression
    - include: stray-brace

  setter-block:
    - match: \{
      scope: punctuation.section.braces.begin.ahk2
      push:
        - meta_scope: meta.setter.block.ahk2
        - match: \}
          scope: punctuation.section.braces.end.ahk2
          pop: 2
        - include: expression
    - include: stray-brace

  property-block:
    - match: (?!.*\{)
      pop: 1
    - match: \{
      scope: punctuation.section.braces.begin.ahk2
      push:
        - meta_scope: meta.property.block.ahk2
        - match: \}
          scope: punctuation.section.braces.end.ahk2
          pop: 2
        - include: expression
    - include: stray-brace

  property-arguments:
    - match: \[
      scope: punctuation.section.brackets.begin.ahk2
      push:
        - meta_scope: meta.parameters.property.ahk2
        - match: \]
          scope: punctuation.section.brackets.end.ahk2
          pop: 2
        - include: expression
    - include: stray-bracket


###########################[ HOTSTRING DECLARATION ]############################

  hotstring:
    - match: ^\s*(:(?i:\s|\*|\?0?|c[01]?|[pk]\d+|s[ipe]|[brto]0?|z)*:[\x09\x20-\x7E]+?)(::)(.*)$
      scope: meta.block.hotstring.ahk2 keyword.declaration.hotstring.ahk2
    - match: ^\s*(:(?i:\s|\*|\?0?|c[01]?|[pk]\d+|s[ipe]|[brto]0?|x|z)*:[\x09\x20-\x7E]+?)(::)
      scope: meta.block.hotstring.ahk2


#############################[ HOTKEY DECLARATION ]#############################

  hotkey:
    - match: ^\s*({{hotkey_modifier}}*)?({{hotkey_identifier}})(\s+(&)\s+~?({{hotkey_identifier}}))?(?i:\s+(up))?(::)\s*(['"]|`{)?
      captures:
        1: punctuation.definition.hotkey.ahk2
        2: keyword.context.hotkey.ahk2
        4: punctuation.definition.hotkey.ahk2
        5: keyword.context.hotkey.ahk2
        6: keyword.context.hotkey.ahk2
        7: punctuation.definition.hotkey.ahk2
        8: keyword.context.hotkey.ahk2
    

#################################[ SECTIONS ]###################################


  block:
    - match: \{
      scope: punctuation.section.block.begin.ahk2
      push:
        - meta_scope: meta.block.ahk2
        - match: \}
          scope: punctuation.section.block.end.ahk2
          pop: 1
        - include: script
    - include: stray-brace

  stray-brace:
    - match: \}
      scope: invalid.illegal.stray.brace.ahk2

  group:
    - match: \(
      scope: punctuation.section.group.begin.ahk2
      push:
        - meta_scope: meta.group.ahk2
        - match: \)
          scope: punctuation.section.group.end.ahk2
          pop: 1
        - include: script
    - include: stray-group

  stray-group:
    - match: \)
      scope: invalid.illegal.stray.group.ahk2

  brackets:
    - match: \[
      scope: punctuation.section.brackets.begin.ahk2
      push:
        - meta_scope: meta.brackets.ahk2
        - match: \]
          scope: punctuation.section.brackets.end.ahk2
          pop: 1
        - include: script
    - include: stray-bracket

  stray-bracket:
    - match: \]
      scope: invalid.illegal.stray.bracket.ahk2


################################# [ LITERALS ] #################################

  literals:
    - include: literal-strings
    - include: literal-numbers
    - include: literal-storage-mods
    - include: literal-constants

  literal-constants:
    - match: (?=\b(?i:true|false)\b)
      push:
        - meta_scope: constant.language.ahk2
        - match: \b(?i:true|false)\b
          scope: constant.language.boolean.ahk2
        - include: pop-out
    - match: (?=\b(?i:this|thishotkey)\b)
      push:
        - meta_scope: constant.language.ahk2
        - match: \b(?i:this|thishotkey)\b
          scope: variable.language.hidden.ahk2
        - include: pop-out
    - match: (?=\b(?i:value)\b)
      push:
        - meta_scope: entity.name.tag.ahk2
        - match: \b(?i:value)\b
          scope: constant.language.value.ahk2
        - include: pop-out

  literal-storage-mods:
    - match: (?i:(\bglobal\b)|(\blocal\b)|(\bstatic\b))
      scope: constant.language.ahk2
      captures:
        1: storage.modifier.global.ahk2
        2: storage.modifier.local.ahk2
        3: storage.modifier.static.ahk2


  literal-numbers:
    # hexadecimal
    - match: \b(0[xX])(\h+)
      scope: meta.number.imaginary.hexadecimal.ahk2
      captures:
        1: constant.numeric.base.ahk2
        2: constant.numeric.value.ahk2
    # floating point
    - match: \b([1-9]\d*|0)\b
      scope: meta.number.float.decimal.ahk2 constant.numeric.value.ahk2
    # integer
    - match: \b([1-9]\d*|0)\.([1-9]\d*|0)\b
      scope: meta.number.integer.decimal.ahk2 constant.numeric.value.ahk2

  literal-strings:
    - match: "'"
      scope: punctuation.definition.string.begin.ahk2
      push: literal-single-quoted-string-body
    - match: '"'
      scope: punctuation.definition.string.begin.ahk2
      push: literal-double-quoted-string-body


  literal-double-quoted-string-body:
    - meta_scope: string.quoted.double.ahk2
    - match: (`{{escape_char}})
      scope: constant.character.escape.ahk2
    - match: (\s;|^;)
      scope: punctuation.definition.comment.ahk2
      push: comment-line-body
    - match: (^\s*\()
      push: literal-double-quoted-continuation-body
      pop: 1
    - match: '"'
      scope: punctuation.definition.string.end.ahk2
      pop: 1

  literal-single-quoted-string-body:
    - meta_scope: string.quoted.single.ahk2
    - match: (`{{escape_char}})
      scope: constant.character.escape.ahk2
    - match: (\s;|^;)
      scope: punctuation.definition.comment.ahk2
      push: comment-line-body
    - match: (^\s*\()
      push: literal-single-quoted-continuation-body
      pop: 1
    - match: "'"
      scope: punctuation.definition.string.end.ahk2
      pop: 1

  literal-double-quoted-continuation-body:
    - meta_scope: string.quoted.double.continuation.ahk2
    - match: (`{{escape_char}})
      scope: constant.character.escape.ahk2
    - match: (^\s*\)\")
      pop: 1

  literal-single-quoted-continuation-body:
    - meta_scope: string.quoted.single.continuation.ahk2
    - match: (`{{escape_char}})
      scope: constant.character.escape.ahk2
    - match: (^\s*\)\')
      pop: 1


##################################[ COMMENTS ]##################################

  comments:
    - match: (^\s*(/\*\*)(?=.*\*\*$))
      captures:
        2: comment.line.documentation.ahk2 punctuation.definition.comment.documentation.ahk2 constant.character.ahk2
      push: comment-doc-body-emphasis
    - match: '^\s*(/\*\*)'
      captures:
        1: comment.line.documentation.ahk2 punctuation.definition.comment.documentation.ahk2
      push: comment-doc-body
    - match: '(?=\s;|^;)'
      scope: comment.line.ahk2
      push: comment-line-body
    - match: '^\s*/\*'
      scope: comment.block.ahk2
      push: comment-block-body

  comment-line-body:
    - meta_scope: comment.line.semi-colon.ahk2
    - match: $\n?
      pop: 1
    - include: comments_in

  comment-block-body:
    - meta_scope: comment.block.ahk2
    - match: '\*/'
      scope: punctuation.definition.comment.end.ahk2
      pop: 1
    - match: (?=^\s*(\*)(?!/))
      captures:
        1: punctuation.definition.comment
    - include: comments_in

  comment-doc-body:
    - meta_include_prototype: false
    - meta_content_scope: comment.line.documentation.ahk2
    - match: '\s*(\*/)'
      captures:
        1: comment.line.documentation punctuation.definition.comment.documentation.ahk2
      pop: 1
    - include: comments_in
    - match: '[\w\s]+|.'

  comment-doc-body-emphasis:
    - meta_include_prototype: false
    - match: .*$
      scope: constant.character.ahk2
      push: comment-doc-body
      pop: 1

  comments_in:
    - match: ((?i:@type|@return))\s*((\{)\s*(.+)\s*(\}))
      captures:
        1: storage.type.class.ahk2
        3: punctuation.definition.annotation.begin.ahk
        4: support.type.ahk2
        5: punctuation.definition.annotation.end.ahk2
    - match: ((?i:@param|@var|@prop))\s*((\{)\s*(.+)\s*(\}))\s+(\w+)
      captures:
        1: storage.type.class.ahk2
        3: punctuation.definition.annotation.begin.ahk
        4: support.type.ahk2
        5: punctuation.definition.annotation.end.ahk2
        6: variable.other.ahk2
    - match: ([;*]*\s*((?i:\btodo\b)((?<tpm>[\p{P}\p{Sm}])\k<tpm>*))([^$\n]*))
      captures:
        1: meta.annotation.todo.line.ahk2 markup.bold.ahk2
        2: meta.annotation.todo.indentifier markup.deleted.ahk2
        5: meta.annotation.todo.note markup.changed.ahk2
    - match: '(^[\s\*;]*(\*\-{2}[\-\*]*)(.*))'
      captures:
        1: meta.annotation.todo.line.ahk2
        2: meta.annotation.todo.indentifier markup.changed.ahk2 markup.italic.ahk2
        3: meta.annotation.todo.note markup.changed.ahk2
    - match: ([<>\-\=]{2,})*
      scope: meta.annotation.arrow-sequence.ahk2 markup.inserted.ahk2
    - match: (^\s\*\*\s+(.*)$)
      captures:
        2: markup.warning.ahk2


#################################[ DIRECTIVES ]#################################

  directives:
    - meta_scope: meta.preprocessor.ahk2
    - match: ^\#(?i:include|includeagain)\b
      scope: keyword.control.import.include.ahk2
      push:
        - match: ((")(<)({{legal_include_path}})(>)("))
          captures:
            1: meta.preprocessor.include.library.ahk2
            2: punctuation.definition.string.begin.ahk2
            3: punctuation.section.brackets.begin.ahk2
            4: string.include.ahk2
            5: punctuation.section.library-name.begin.ahk2
            6: variable.language.ahk2
            7: punctuation.section.library-name.end.ahk2
            8: punctuation.section.brackets.end.ahk2
            9: punctuation.definition.string.end.ahk2
        - match: ((\<)({{legal_include_path}})(\>))
          captures:
            1: meta.preprocessor.include.library.ahk2
            2: punctuation.section.brackets.begin.ahk2
            3: string.include.ahk2
            4: punctuation.section.library-name.begin.ahk2
            5: variable.language.ahk2
            6: punctuation.section.library-name.end.ahk2
            7: punctuation.section.brackets.end.ahk2
        - match: ((")({{legal_include_path}})("))
          captures:
            1: meta.preprocessor.include.path.ahk2
            2: punctuation.definition.string.begin.ahk2
            3: string.include.ahk2
            4: punctuation.section.library-name.begin.ahk2
            5: variable.language.ahk2
            6: punctuation.section.library-name.end.ahk2
            7: punctuation.definition.string.end.ahk2
        - match: ({{legal_include_path}})
          captures:
            1: meta.preprocessor.include.path.ahk2 string.include.ahk2
            2: punctuation.section.library-name.begin.ahk2
            3: variable.language.ahk2
            4: punctuation.section.library-name.end.ahk2
        - include: pop-out
    - match: '^\#{{directive_eats_string}}\b'
      scope: keyword.control.directive.ahk2
      push:
        - match: (.*)(?![`\s];)
          scope: string.other.directive.ahk2
        - include: pop-out
    - match: '^\#{{directive_eats_expression}}\b'
      scope: keyword.control.directive.ahk2
      push:
        - meta_scope: meta.directive.expression.ahk
        - match: $
          pop: 2
        - include: expression


###############################[ REGEX FAIRIES ]################################

  step-out:
    - include: comments
    - match: $
      pop: 1
    - match: \S
      scope: invalid.illegal.ahk2

  pop-out:
    - match: ''
      pop: 1

  else-pop:
    - match: '(?=\S)'
      pop: 1
